<!DOCTYPE html>
<html>
  <head>
    <title>Webcomic Host</title>
    <link rel="stylesheet" type="text/css" href="style.css">
  </head>
  <body>
    <!-- Display a banner image -->
    <div id="banner" style="background-color: white;"></div>
    <!-- Display a dropdown menu for the user to select a webcomic -->
    <form> <label for="webcomic_select">Select a webcomic:</label><br>
      <select id="webcomic_select" onchange="loadWebcomic()">
        <option value="webcomic_1">At the Rainbow Hotel</option>
        <option value="webcomic_2">Webcomic 2</option>
        <!-- Add more options for each webcomic you want to host -->
      </select>
      <br>
      <br>
      <!-- Display a dropdown menu for the user to select a page --> <label for="page_select">Select
        a page:</label><br>
      <select id="page_select" onchange="loadPage()">
      </select>
    </form>
    <!-- Display the webcomic and control buttons -->
    <div id="webcomic"> <button class="control-button" onclick="loadPrevPage()">Previous</button>
      <img id="webcomic_page"> <button class="control-button" onclick="loadNextPage()">Next</button>
    </div>
    <script>
	// Load the banner image for the selected webcomic
	function loadBanner() {
		const banner = document.getElementById('banner');
		const webcomic = document.getElementById('webcomic_select').value;
		banner.style.backgroundImage = `url('banners/${webcomic}.png')`;
	}

	// Load the pages for the selected webcomic
	function loadWebcomic() {
		const pageSelect = document.getElementById('page_select');
		const webcomic = document.getElementById('webcomic_select').value;

		// Clear the page select menu
		pageSelect.innerHTML = '';

		// Load the pages for the selected webcomic
		fetch(`pages/${webcomic}.json`)
			.then(response => response.json())
			.then(pages => {
				// Add an option for each page
				for (let i = 0; i < pages.length; i++) {
					const pageOption = document.createElement('option');
					pageOption.value = pages[i];
					pageOption.innerHTML = `Page ${i + 1}`;
					pageSelect.appendChild(pageOption);
				}
			});

		// Load the banner image for the selected webcomic
		loadBanner();

		// Load the first page of the selected webcomic
		loadPage();
	}

	// Load the selected page
	function loadPage() {
		const webcomicPage = document.getElementById('webcomic_page');
		const webcomic = document.getElementById('webcomic_select').value;
		const page = document.getElementById('page_select').value;
		webcomicPage.src='webcomics/${webcomic}/${page}.png`;
	}

	// Load the previous page
	function loadPrevPage() {
		const pageSelect = document.getElementById('page_select');
		if (pageSelect.selectedIndex > 0) {
			pageSelect.selectedIndex--;
			loadPage();
		}
	}

	// Load the next page
	function loadNextPage() {
		const pageSelect = document.getElementById('page_select');
		if (pageSelect.selectedIndex < pageSelect.options.length - 1) {
			pageSelect.selectedIndex++;
			loadPage();
		}
	}
</script>
  </body>
</html>
